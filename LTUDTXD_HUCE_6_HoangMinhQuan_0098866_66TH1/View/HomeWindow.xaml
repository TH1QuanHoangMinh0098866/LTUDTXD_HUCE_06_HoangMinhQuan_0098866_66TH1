      Margin="16,0,0,0"
      Padding="8,4,8,4"
      Panel.ZIndex="1"
      materialDesign:ElevationAssist.Elevation="Dp2"
      CornerRadius="2"
      Mode="Standard" VerticalAlignment="Center" Background="#FFF7F5F5" HorizontalAlignment="Center">
